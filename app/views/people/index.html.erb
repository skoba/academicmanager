<h1>研究者一覧</h1>

<table>
  <thead>
    <tr>
      <th>姓</th>
      <th>（ふりがな）</th>
      <th>（英語表記）</th>
      <th>名</th>
      <th>（ふりがな）</th>
      <th>英語表記</th>
      <th>性別</th>
      <th>生年月日</th>
      <th>〒</th>
      <th>住所</th>
      <th>（ふりがな）</th>
      <th>電話番号</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.family %></td>
        <td><%= person.family_ph %></td>
        <td><%= person.family_e %></td>
        <td><%= person.given %></td>
        <td><%= person.given_ph %></td>
        <td><%= person.given_e %></td>
        <td><%= person.gender %></td>
        <td><%= person.date_of_birth %></td>
        <td><%= person.zip %></td>
        <td><%= person.address %></td>
        <td><%= person.address_ph %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

