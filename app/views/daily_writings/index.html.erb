<p id="notice"><%= notice %></p>

<h1>Listing Daily Writings</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Words</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_writings.each do |daily_writing| %>
      <tr>
        <td><%= daily_writing.person %></td>
        <td><%= daily_writing.start_time %></td>
        <td><%= daily_writing.end_time %></td>
        <td><%= daily_writing.words %></td>
        <td><%= daily_writing.memo %></td>
        <td><%= link_to 'Show', daily_writing %></td>
        <td><%= link_to 'Edit', edit_daily_writing_path(daily_writing) %></td>
        <td><%= link_to 'Destroy', daily_writing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

